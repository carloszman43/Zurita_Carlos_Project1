@model Web.Models.Topping

@{
    ViewData["Title"] = "CreateTopping";
    ViewBag.Title = "Index";
    var PID = ViewBag.PID;
    var PIDUser = ViewBag.PIDUser;
    var PIDOrder = ViewBag.PIDOrder;
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>CreateTopping</h1>
@*<h2>@PID</h2>*@
<h4>Topping</h4>
@*<p>
    <a asp-action="CreateTopping">Add Toppings</a>
</p>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTopping">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tpizzaid" class="control-label"></label>
                <input asp-for="Tpizzaid" class="form-control" value=@PID/>
                <span asp-validation-for="Tpizzaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topping1" class="control-label"></label>
                <input asp-for="Topping1" class="form-control" autofocus/>
                <span asp-validation-for="Topping1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a><br>
    <a asp-action="ToppingsPage" asp-route-ptid=@PID>Back to Topping List</a><br>
    <a asp-action="PizzasPage" asp-route-opid=@PIDOrder>Back to Pizza List</a><br>
    <a asp-action="OrdersPage" asp-route-uoid=@PIDUser>Back to Order List</a><br>
    <a asp-action="UsersPage">Back to User List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
